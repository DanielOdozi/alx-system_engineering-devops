#!/usr/bin/env bash
# This script displays "Best School" 10 times

china="bad luck from China"
japan="bad luck from Japan"
italy="bad luck from Italy"
count=1

while [ $count -le 20 ]; do
    case $count in
        4)
            echo "$count"
            echo "$china"
            ;;
        9)
            echo "$count"
            echo "$japan"
            ;;
        17)
            echo "$count"
            echo "$italy"
            ;;
        *)
            echo "$count"
            ;;
    esac
    ((count++))
done